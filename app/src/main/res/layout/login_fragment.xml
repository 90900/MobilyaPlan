<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/logoson"/>

        <EditText
            android:id="@+id/login_email_edittext"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_edittext"
            android:hint="Email"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/login_sifre_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_edittext"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/kayitol_textview"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/kumrengi"
            android:text="Kayıt Ol"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/sifreReset_textview"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/kumrengi"
            android:text="Şifremi Unuttum"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button

                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:id="@+id/girisyap"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_button"
                android:onClick="gec"
                android:text="Giris Yap"
                android:textColor="@color/beyaz"
                />
            <Button

                android:textSize="13sp"
                android:layout_weight="1"
                android:id="@+id/button"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_button"
                android:onClick="gec"
                android:textColor="@color/beyaz"
                android:text="MobilyaPlan Üyesi Değilsen Devam Et"
                />


        </LinearLayout>





    </LinearLayout>



</LinearLayout>