<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/black"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <Button
                android:backgroundTint="@color/beyaz"
                android:id="@+id/close_dialog"
                android:layout_width="30dp"

                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/close" />

            <de.hdodenhof.circleimageview.CircleImageView
                
                android:id="@+id/musteri_foto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/person"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />

            <TextView
                android:textColor="@color/beyaz"
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/musteri_foto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Musteri Adı"
                android:textSize="35sp" />

            <TextView
                android:textColor="@color/beyaz"
                android:id="@+id/tel_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customerName"
                android:layout_alignStart="@+id/customerName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-1dp"
                android:text="Telefon Numarası"
                android:textSize="20sp" />

            <TextView
                android:textColor="@color/beyaz"
                android:id="@+id/customerTel_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tel_textview"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="0202349234"
                android:layout_centerHorizontal="true"
                android:textSize="25sp" />

            <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/make_call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/beyaz"
                android:background="@drawable/bg_button"
                android:text="Ara"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/customerTel_textview"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>