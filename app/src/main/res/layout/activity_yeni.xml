<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    app:cardPreventCornerOverlap="false"
    android:elevation="8dp"
   >
<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView



        android:scaleType="centerCrop"
        android:id="@+id/ımageview"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/mutfakhesabi" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ımageview"
        android:layout_alignStart="@+id/ımageview"
        android:layout_alignTop="@+id/ımageview"
        android:layout_alignEnd="@+id/ımageview"
        android:layout_alignBottom="@+id/ımageview"
        android:layout_marginStart="0dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:text="Yatak Odası"
        android:textColor="@color/beyaz"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>


</android.support.v7.widget.CardView>